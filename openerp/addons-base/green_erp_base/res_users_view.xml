<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
        <!-- Add GreenERP To Group Form -->
        <record id="view_groups_form_inherit_add_shop" model="ir.ui.view">
            <field name="name">view.groups.tree.inherit.add.shop</field>
            <field name="model">res.groups</field>
            <field name="inherit_id" ref="base.view_groups_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='name']" position="after">
                    <field name="greenerp"/>
                </xpath>
            </field>
        </record>
        
        <record id="greenerp_view_users_form" model="ir.ui.view">
            <field name="name">res.users.greenerp.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form string="Users" version="7.0">
                    <field name="id" invisible="1"/>
                    <sheet>
                        <div class="oe_right oe_button_box">
                            <button string="Change Password" type="action" name="%(base.change_password_wizard_action)d"
                                help="Change the user password."/>
                        </div>
                        <field name="image" widget='image' class="oe_avatar oe_left" options='{"preview_image": "image_medium"}'/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                            <label for="login" class="oe_edit_only"/>
                            <h2><field name="login"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" context="{'user_preference': 0}"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>

                        <notebook colspan="4">
                            <page string="Preferences">
                                <group>
                                    <group name="preferences">
                                        <field name="lang"/>
                                        <field name="tz"/>
                                    </group>
                                    <group groups="base.group_no_one">
                                        <field name="action_id"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="email" widget="email"/>
                                    <field name="signature"/>
                                </group>
                            </page>
                            <page string="Access Rights">
                                <group string="Allowed Companies" groups="base.group_multi_company">
                                    <field name="company_ids" nolabel="1" widget="many2many_tags"/>
                                </group>
                                <group col="4" string="Groups">
                                    <field name="groups_id" nolabel='1' domain="[('greenerp','=',True)]"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="greenerp_view_users_tree" model="ir.ui.view">
            <field name="name">res.users.greenerp.tree</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree string="Users">
                    <field name="name"/>
                    <field name="login"/>
                    <field name="lang"/>
                    <field name="login_date"/>
                </tree>
            </field>
        </record>
        <record id="greenerp_view_users_search" model="ir.ui.view">
            <field name="name">res.users.greenerp.search</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <search string="Users">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('login','ilike',self)]" string="User"/>
                    <field name="company_ids" string="Company" groups="base.group_multi_company"/>
                </search>
            </field>
        </record>
        <record id="action_res_users_greenerp" model="ir.actions.act_window">
            <field name="name">Users</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="greenerp_view_users_tree"/>
            <field name="search_view_id" ref="greenerp_view_users_search"/>
        </record>
        <record id="action_res_users_greenerp1" model="ir.actions.act_window.view">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="greenerp_view_users_tree"/>
            <field name="act_window_id" ref="action_res_users_greenerp"/>
        </record>
        <record id="action_res_users_greenerp2" model="ir.actions.act_window.view">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="greenerp_view_users_form"/>
            <field name="act_window_id" ref="action_res_users_greenerp"/>
        </record>
        
    </data>
</openerp>




