<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='child_ids']/form/sheet/group/field[@name='mobile']" position="after">
            		<field name="nric"/>
            		<field name="chairman"/>
            	</xpath>
            	<xpath expr="//form/sheet/notebook/page[@name='sales_purchases']" position="before">
            		<page string="Payroll Details">
                        <group>
                        	<group>
                            	<field name="uen"/>
                            	<field name="chinese_name"/>
                            	<field name="incorporation_date"/>
                            	<field name="director_appt_date"/>
                            	<field name="secretary_appt_date"/>
                            	<field name="employment"/>
                            	<field name="paid_up_capital"/>
                            </group>
                            <group>
                            	<field name="c_status"/>
                            	<field name="race"/>
                            	<field name="country_id"/>
                            	<field name="block_house_no"/>
                            	<field name="street_name"/>
                            	<field name="level_no"/>
                            	<field name="unit_no"/>
                            	<field name="postal_code"/>
                            </group>
                        </group>
                        <group>
                        	<group>
                            	<field name="period_year"/>
                            	<field name="fs_start_date"/>
                            	<field name="fs_end_date"/>
                            	<field name="axp_report"/>
                            	<field name="estimate_chargable_income_date"/>
                            	<field name="annual_general_meeting_date"/>
                            	<field name="annual_return_date"/>
                            	<field name="financial_month"/>
                            </group>
                            <group>
                            	<field name="next_annual_general_meeting_due_date"/>
                            	<field name="sole_proprietary_partnership"/>
                            	<field name="last_financiall_year_end"/>
                            	<field name="sole_proprietary_partnership_date"/>
                            	<field name="tax_form_cs"/>
                            	<field name="submit_monthly_cpf"/>
                            	<field name="compute_submit_yearly_staff_salary"/>
                            	<field name="remarks_1"/>
                            </group>
                        </group>
                    </page>
            		<page name='crm_detail' string="CRM Details">
                        <group>
                            <group>
                            	<label for="street_personal" string="Personal Address"/>
	                            <div>
	                                <field name="street_personal" placeholder="Street..." />
	                                <field name="street2_personal"/>
	                                <div class="address_format">
	                                    <field name="city_personal" placeholder="City" style="width: 40%%"/>
	                                    <field name="state_personal_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' />
	                                    <field name="zip_personal" placeholder="ZIP" style="width: 20%%" />
	                                </div>
	                                <field name="country_personal_id" placeholder="Country" class="oe_no_button" options='{"no_open": True, "no_create": True}' />
	                            </div>
                            </group>
                            <group>
                            	<label for="street_secretary" string="Secretary Address"/>
	                            <div>
	                                <field name="street_secretary" placeholder="Street..." />
	                                <field name="street2_secretary"/>
	                                <div class="address_format">
	                                    <field name="city_secretary" placeholder="City" style="width: 40%%"/>
	                                    <field name="state_secretary_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' />
	                                    <field name="zip_secretary" placeholder="ZIP" style="width: 20%%" />
	                                </div>
	                                <field name="country_secretary_id" placeholder="Country" class="oe_no_button" options='{"no_open": True, "no_create": True}' />
	                            </div>
                            </group>
                        </group>
                        <group>
                        	<group>
                            	<field name="company_roc"/>
                            	<field name="nric"/>
                            	<label for="signature_specimen"/>
								<h2><field name="signature_specimen" widget="signature"/></h2>
                            </group>
                            <group>
                            	<field name="hp"/>
                            	<field name="office_no"/>
                            	<field name="period_of_year"/>
                            </group>
                        </group>
                    </page>
                    <page string="Document Collection">
                    	<field name='document_collection_ids'>
                    		<form string="Document Collection" >
                    			<field name="name" />
			                    <group>
				                    <group>
				                    	<field name="alert_date" />
					                    <field name="document_sales_invoice"/>
					                    <field name="document_receipt"/>
					                    <field name="document_payment_voucher"/>
					                    <field name="document_bank_statement"/>
					                    <field name="document_rental_contract"/>
					                    <field name="document_petty_cash"/>
				                    </group>
				                    <group>
					                    <field name="tracking_sales_invoice"/>
					                    <field name="tracking_receipt"/>
					                    <field name="tracking_payment_voucher"/>
					                    <field name="tracking_bank_statement"/>
					                    <field name="tracking_rental_contract"/>
					                    <field name="tracking_petty_cash"/>
				                    </group>
			                    </group>
                    		</form>
                    		<tree string="Document Collection" editable='top'>
			                    <field name="name" />
			                    <field name="alert_date" />
			                    <field name="document_sales_invoice"/>
			                    <field name="document_receipt"/>
			                    <field name="document_payment_voucher"/>
			                    <field name="document_bank_statement"/>
			                    <field name="document_rental_contract"/>
			                    <field name="document_petty_cash"/>
			                </tree>
		                </field>
                    </page>
                    <page string="Tracking Collection">
                    	<field name='tracking_collection_ids'>
                    		<tree string="Tracking Collection" editable='top'>
			                    <field name="name" />
			                    <field name="alert_date" />
			                    <field name="tracking_sales_invoice"/>
			                    <field name="tracking_receipt"/>
			                    <field name="tracking_payment_voucher"/>
			                    <field name="tracking_bank_statement"/>
			                    <field name="tracking_rental_contract"/>
			                    <field name="tracking_petty_cash"/>
			                </tree>
		                </field>
                    </page>
                    <page string="Account Adjustment">
                    	<field name='account_adjustment_ids'>
                    		<tree string="Account Adjustment" editable='top'>
			                    <field name="name" />
			                    <field name="alert_date" />
			                    <field name="account_adjustment"/>
			                </tree>
		                </field>
                    </page>
                    <page string="Account Finalization">
                    	<field name='account_finalization_ids'>
                    		<tree string="Account Finalization" editable='top'>
			                    <field name="name" />
			                    <field name="alert_date" />
			                    <field name="account_finalization"/>
			                </tree>
		                </field>
                    </page>
                    <page string="Estimate Chargeable Income">
                    	<field name='estimate_chargeable_income_ids'>
                    		<tree string="Estimate Chargeable Income" editable='top'>
			                    <field name="name" />
			                    <field name="alert_date" />
			                    <field name="document_collection"/>
			                </tree>
		                </field>
                    </page>
                    <page string="Annual Report Preparation">
                    	<field name='annual_report_preparation_ids'>
                    		<tree string="Annual Report Preparation" editable='top'>
			                    <field name="name" />
			                    <field name="alert_date" />
			                    <field name="document_collection"/>
			                </tree>
		                </field>
                    </page>
            	</xpath>
            </field>
        </record>
        
