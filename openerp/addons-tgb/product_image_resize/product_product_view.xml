<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='image_medium']" position="replace">
                	<field name="image_medium" widget="image" class="oe_left"/>
            	</xpath>
            </field>
        </record>

        <record model="ir.values" id="change_width_height_product">
            <field name="model_id" ref="product.model_product_product" />
            <field name="name">Resize</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_change_width_height'))" />
            <field name="key">action</field>
            <field name="model">product.product</field>
        </record>

		<record model="ir.values" id="change_width_height_product_template">
            <field name="model_id" ref="product.model_product_template" />
            <field name="name">Resize</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_change_width_height'))" />
            <field name="key">action</field>
            <field name="model">product.template</field>
        </record>

    </data>
</openerp>