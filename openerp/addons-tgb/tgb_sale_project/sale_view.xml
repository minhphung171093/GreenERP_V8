<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//page[@string='Order Lines']" position="before">
					<page string="List Project">
						<field name="list_project_line" nolabel='1'>
							<tree>
								<field name="name" required='1'/>
								<field name="quantity"/>
								<field name="total_amount"/>
								<field name="total_price"/>
							</tree>
							<form version='7.0'>
								<sheet>
									<group col='4' colspan='2'>
										<field name="name" required='1'/>
										<field name="quantity" required='1'/>
										<field name="total_amount"/>
										<field name="total_price"/>
									</group>
									<group col='4' colspan='4'>
										<field name="project_line" nolabel='1'>
											<tree editable='bottom'>
												<field name="sequence" widget="handle"/>
			                                    <field name="state" invisible="1"/>
			                                    <field name="th_weight" invisible="1"/>
			                                    <field name="line_no" readonly='1'/>
			                                    <field name="product_id" on_change="onchange_product(product_id)"/>
			                                    <field name="name" invisible='1'/>
			                                    <field name="product_uom_qty" invisible='1'/>
			                                    <field name="product_quantity"/>
			                                    <field name="quantity"/>
			                                    <field name="mark_up"/>
			                                    <field name="product_uom" invisible='1'/>
			                                    <field name="product_uos_qty" groups="product.group_uos" invisible="1"/>
			                                    <field name="product_uos" string="UoS" groups="product.group_uos" invisible="1"/>
			                                    <field name="price_unit" string='Cost Price'/>
			                                    <field name="tax_id" invisible='1' widget="many2many_tags" domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]"/>
			                                    <field name="discount" invisible='1' groups="sale.group_discount_per_so_line"/>
			                                    <field name="price_subtotal" invisible='1'/>
			                                    <field name="project_id" invisible='1' options="{'no_create': True}"/>
											</tree>
										</field>
									</group>
								</sheet>
							</form>
						</field>
					</page>
				</xpath>
				<xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
					<field name="project_id" options="{'no_create': True}" context="{'search_project':1,'list_project_line':parent.list_project_line}"/>
				</xpath>
				<xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
					<field name="mark_up"/>
				</xpath>
				<xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
					<attribute name="string">Cost Price</attribute>
				</xpath>
				<xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
					<field name="line_no" readonly='1'/>
				</xpath>
				<xpath expr="//page[@string='Order Lines']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
            </field>
        </record>

    </data>
</openerp>
