	<record id="view_category_property_form_invisible" model="ir.ui.view">
	    <field name="name">product.category.form.invisible</field>
	    <field name="model">product.category</field>
	    <field name="inherit_id" ref="account.view_category_property_form"/>
	    <field name="groups_id" eval="[(6, 0, [ref('group_sale_semi_manager') ])]"/>
