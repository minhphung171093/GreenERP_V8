	        <field name='notification_email_send' position="attributes">
	            <attribute name="invisible">1</attribute>
	        </field>
	    </field>
	</record>
	
	<record id="sale_view_order_form_invisible" model="ir.ui.view">
	    <field name="name">sale.order.form.invisible</field>
	    <field name="model">sale.order</field>
	    <field name="inherit_id" ref="sale.view_order_form"/>
	    <field name="groups_id" eval="[(6, 0, [ref('group_sale_semi_manager') ])]"/>
	    <field name="arch" type="xml">
	        <page string="Other Information" position="attributes">
	        	<attribute name="invisible">1</attribute>
	        </page>
	        <field name='amount_tax' position="attributes">
