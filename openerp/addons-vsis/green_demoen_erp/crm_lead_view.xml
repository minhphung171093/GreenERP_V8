	<record id="view_category_property_form2_invisible" model="ir.ui.view">
	    <field name="name">product.category.form.invisible</field>
	    <field name="model">product.category</field>
	    <field name="inherit_id" ref="stock.view_category_property_form"/>
	    <field name="groups_id" eval="[(6, 0, [ref('group_sale_semi_manager') ])]"/>
	    <field name="arch" type="xml">
	        <group string="Account Stock Properties" position="attributes">
	        	<attribute name="invisible">1</attribute>
	        </group>
	    </field>
	</record>
	
	<record id="sale_view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='tax_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <xpath expr="//tree/field[@name='product_id']" position="before">
                <field name="product_category_id"/>
            </xpath>
            
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="string">Name</attribute>
                <attribute name="domain">[('categ_id','=',product_category_id)]</attribute>
            </xpath>
            
        </field>
    </record>
        
	<record id="product_normal_form_view_invisible" model="ir.ui.view">
