<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
<!-- Công nợ đầu kỳ -->
		<record id="view_congno_dauky_filter" model="ir.ui.view">
            <field name="name">congno.dauky.select</field>
            <field name="model">congno.dauky</field>
            <field name="arch" type="xml">
                <search string="Công nợ đầu kỳ">
                	<field name="period_id"/>
                    <field name="partner_id"/>
                    <group expand="0" string="Group By">
                    	<filter name="group_by_period_id" string="Tháng" context="{'group_by':'period_id'}"/>
                    	<filter name="group_by_partner_id" string="Đối tượng" context="{'group_by':'partner_id'}"/>
                    </group>
               </search>
            </field>
        </record>
    	<record id="view_congno_dauky_tree" model="ir.ui.view">
            <field name="name">congno.dauky.tree</field>
            <field name="model">congno.dauky</field>
            <field name="arch" type="xml">
                <tree string="Công nợ đầu kỳ" create='false' edit='false' delete='false'>
                	<field name="period_id"/>
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>
        <record id="view_congno_dauky_form" model="ir.ui.view">
            <field name="name">congno.dauky.form</field>
            <field name="model">congno.dauky</field>
            <field name="arch" type="xml">
                <form string="Công nợ đầu kỳ" version='7.0' create='false' edit='false' delete='false'>
					<header>
					</header>
                	<sheet>
	                    <group col="4" colspan="2">
	                    	<group>
		                    	<field name="period_id"/>
		                    </group>
		                    <group>
			                    <field name="partner_id"/>
		                    </group>
	                    </group>
                    	<group col="4" colspan="4">
	                    	<field name="congno_dauky_line" nolabel='1' colspan="4">
	                    		<tree>
	                    			<field name="chinhanh_id"/>
	                    			<field name="mlg_type"/>
	                    			<!--<field name="bien_so_xe_id"/>
	                    			<field name="so_hop_dong"/>
	                    			<field name="so_hoa_don"/>
	                    			<field name="ma_bang_chiettinh_chiphi_sua"/>-->
	                    			<field name="so_tien_no"/>
	                    		</tree>
	                    	</field>
                    	</group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_congno_dauky" model="ir.actions.act_window">
            <field name="name">Công nợ đầu kỳ</field>
            <field name="res_model">congno.dauky</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_congno_dauky_tree"/>
            <field name="search_view_id" ref="view_congno_dauky_filter"/>
            <field name="context">{}</field>
        </record>
        
	</data>
</openerp>