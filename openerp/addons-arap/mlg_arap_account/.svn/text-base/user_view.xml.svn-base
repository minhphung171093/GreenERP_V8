<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!-- Thêm chi nhánh --> 
        <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="name">res.users.form.inherit</field>
            <field name="model">res.users</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <field name="active" position="after">
                	<group string="Các chi nhánh" colspan='4'>
                		<field name="chinhanh_ids" nolabel='1' domain="[('parent_id.code','=','1')]"/>
                	</group>
                	<field name="chinhanh_id" required='1' context="{'search_chinhanh_in_chinhanhids':1,'chinhanh_user': chinhanh_ids}"/>
                </field>
            </field>
        </record>
        
        <record id="view_users_form_simple_modif_inherit" model="ir.ui.view">
            <field name="name">res.users.form.simple.inherit</field>
            <field name="model">res.users</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
            		<field name="chinhanh_ids" invisible='1' domain="[('parent_id.code','=','1')]"/>
                	<field name="chinhanh_id" required='1' context="{'search_chinhanh_in_chinhanhids':1,'chinhanh_user': chinhanh_ids}"/>
                </field>
            </field>
        </record>
        
    </data>
</openerp>
