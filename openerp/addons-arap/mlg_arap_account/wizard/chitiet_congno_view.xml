<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   
    
<!-- Báo cáo chi tiết công nợ -->
        <record id="view_chitiet_congno_report" model="ir.ui.view">
            <field name="name">chitiet.report</field>
            <field name="model">chitiet.congno</field>
            <field name="arch" type="xml">
                <form string="Báo cáo chi tiết công nợ" version="7.0">
                	<sheet version="7.0">
	                	<group col='4' colspan='2'>
	                    	<field name='period_from_id' required='1' domain="[('special','!=',True)]"/>
	                    	<field name='period_to_id' required='1' domain="[('special','!=',True)]"/>
	                    	<field name='mlg_type' required='1'/>
	                    	<field name='chinhanh_id' readonly='1'/>
	                    	<field name='loai_doituong'/>
	                    	<field name='doi_xe_ids' attrs="{'invisible':[('loai_doituong','=','nhadautu')]}" widget="many2many_tags" domain="[('type','=','other'),('parent_id','=',chinhanh_id)]" on_change="onchange_doi_xe(doi_xe_ids)"/>
	                    	<field name='bai_giaoca_ids' attrs="{'invisible':[('loai_doituong','!=','taixe')]}" widget="many2many_tags" on_change="onchange_bai_giaoca(bai_giaoca_ids)"/>
	                    	<field name='partner_ids' context="{'baocao_partner_with_loaidoituong':1,'loai_doituong': loai_doituong}" widget="many2many_tags" domain="[('customer','=',True)]"/>
	                    	<!--<field name='loai_kyquy_id' options="{'no_create': True}" attrs="{'invisible':[('mlg_type','!=','phai_tra_ky_quy')]}"/>-->
	                    	<field name='loai_tamung_id' options="{'no_create': True}" attrs="{'invisible':[('mlg_type','!=','hoan_tam_ung')]}"/>
	                    	<field name='loai_nodoanhthu_id' options="{'no_create': True}" attrs="{'invisible':[('mlg_type','!=','no_doanh_thu')]}"/>
	                    	<field name='loai_vipham_id' options="{'no_create': True}" attrs="{'invisible':[('mlg_type','!=','phat_vi_pham')]}"/>
	                    	<field name='loai_baohiem_id' options="{'no_create': True}" attrs="{'invisible':[('mlg_type','!=','phai_thu_bao_hiem')]}"/>
	                    </group>
                    </sheet>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight" context="{'name_report':'chitiet_congno_report'}"/>
                        hoặc
                        <button string="Hủy bỏ" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>        
        <record id="action_chitiet_congno" model="ir.actions.act_window">
            <field name="name">Báo cáo chi tiết công nợ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">chitiet.congno</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_chitiet_congno_report"/>
            <field name="target">new</field>
        </record>
	        
    </data>
</openerp>

