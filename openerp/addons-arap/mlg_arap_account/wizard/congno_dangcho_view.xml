<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   
    
<!-- Công nợ đang chờ -->
        <record id="view_congno_dangcho_report" model="ir.ui.view">
            <field name="name">congno.dangcho.form</field>
            <field name="model">congno.dangcho</field>
            <field name="arch" type="xml">
                <form string="Công nợ đang chờ" version="7.0">
                	<group col='4' colspan='2'>
                		<field name='date'/>
                    	<field name='chinhanh_id' readonly='1'/>
                    	<field name='mlg_type' required='1'/>
                    </group>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight" context="{'name_report':'congno_dangcho_report'}"/>
                        hoặc
                        <button string="Hủy bỏ" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>        
        <record id="action_congno_dangcho" model="ir.actions.act_window">
            <field name="name">Công nợ đang chờ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">congno.dangcho</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_congno_dangcho_report"/>
            <field name="target">new</field>
        </record>
	        
    </data>
</openerp>

