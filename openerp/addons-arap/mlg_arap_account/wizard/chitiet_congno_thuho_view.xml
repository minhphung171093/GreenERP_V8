<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   
    
<!-- Báo cáo chi tiết công nợ thu hộ -->
        <record id="view_chitiet_congno_thuho_report" model="ir.ui.view">
            <field name="name">chitiet.thuho.report</field>
            <field name="model">chitiet.congno.thuho</field>
            <field name="arch" type="xml">
                <form string="Báo cáo chi tiết công nợ thu hộ" version="7.0">
                	<sheet version="7.0">
	                	<group col='4' colspan='2'>
	                    	<field name='period_from_id' options="{'no_create': True}" required='1' domain="[('special','!=',True)]"/>
	                    	<field name='period_to_id' options="{'no_create': True}" required='1' domain="[('special','!=',True)]"/>
	                    	<field name='chinhanh_id' readonly='1'/>
	                    	<field name='partner_ids' options="{'no_create': True}" widget="many2many_tags" domain="[('nhadautugiantiep','=',True)]"/>
	                    	<field name='bien_so_xe_ids' options="{'no_create': True}" widget="many2many_tags"/>
	                    </group>
                    </sheet>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight" context="{'name_report':'chitiet_congno_thuho_report'}"/>
                        hoặc
                        <button string="Hủy bỏ" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>        
        <record id="action_chitiet_congno_thuho" model="ir.actions.act_window">
            <field name="name">Báo cáo chi tiết công nợ thu hộ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">chitiet.congno.thuho</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_chitiet_congno_thuho_report"/>
            <field name="target">new</field>
        </record>
	        
    </data>
</openerp>

