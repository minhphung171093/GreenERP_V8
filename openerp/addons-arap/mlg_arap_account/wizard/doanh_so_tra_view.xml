<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   
    
<!-- Doanh số trả wizard -->
        <record id="view_doanh_so_tra_wizard_form" model="ir.ui.view">
            <field name="name">doanh.so.tra.wizard.form</field>
            <field name="model">doanh.so.tra.wizard</field>
            <field name="arch" type="xml">
                <form string="Doanh số trả" version="7.0">
                	<group col='4' colspan='2'>
                    	<field name='from_date'/>
                    	<field name='to_date'/>
                    </group>
                    <footer>
                        <button name="print_report" string="Xuất ra excel" type="object" class="oe_highlight"/>
                        hoặc
                        <button name="review_report" string="Xem trước" type="object" class="oe_highlight"/>
                        hoặc
                        <button string="Hủy bỏ" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>     
        <record id="action_doanh_so_tra_wizard" model="ir.actions.act_window">
            <field name="name">Doanh số trả</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">doanh.so.tra.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_doanh_so_tra_wizard_form"/>
            <field name="target">new</field>
        </record>
	        
<!-- Doanh số trả -->
        <record id="view_doanh_so_tra_form" model="ir.ui.view">
            <field name="name">doanh.so.tra.form</field>
            <field name="model">doanh.so.tra</field>
            <field name="arch" type="xml">
                <form string="Doanh số trả" version="7.0" create='false' edit='false' delete='false'>
                    <header>
                        <button name="print_report" string="Xuất ra excel" type="object" class="oe_highlight"/>
                    </header>
                    <div class="oe_text_center">
                    	<h1>Doanh số đã chi</h1>
                	</div>
                	<group col='4' colspan='2'>
                    	<field name='from_date'/>
                    	<field name='to_date'/>
                    </group>
                    <group>
                    	<field name='doanhsotra_line' colspan='4' nolabel='1'>
                    		<tree>
                    			<field name='chinhanh'/>
                    			<field name='machinhanh'/>
                    			<field name='loaicongno'/>
                    			<field name='taikhoan'/>
                    			<field name='sotien'/>
                    			<field name='ghichu'/>
                    		</tree>
                    	</field>
                    </group>
                </form>
            </field>
        </record>
	        
    </data>
</openerp>

