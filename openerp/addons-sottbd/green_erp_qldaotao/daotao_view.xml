<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        					
        <record model="ir.ui.view" id="ke_hoach_dt_tree">
            <field name="name">ke.hoach.dt.tree</field>
            <field name="model">ke.hoach.dt</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Khóa Đào Tạo">
                    <field name="name"/>
                    <field name="lop_id"/>
                    <field name="dia_diem"/>
                    <field name="dieu_kien"/>
                </tree>
            </field>
        </record>  
        <record model="ir.ui.view" id="ke_hoach_dt_form">
            <field name="name">ke.hoach.dt.form</field>
            <field name="model">ke.hoach.dt</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Khóa Đào Tạo" version="7.0">
	                <sheet>
                		<group col="4" colspan="2">
		            		<field name="name" />
		                    <field name="lop_id" options="{'no_create': true}"/>
                		</group>
                		<group col="4">
							<field name="dieu_kien"/>
							<field name="noi_dung"/>                   
							<field name="ctr_lop"/>
                		</group>
	                </sheet>
                </form>
            </field>
        </record>
       
        <record model="ir.actions.act_window" id="action_ke_hoach_dt">
            <field name="name">Kế Hoạch Đào Tạo</field>
            <field name="res_model">ke.hoach.dt</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record> 
        
    <!--Giảng viên-->
        <record model="ir.ui.view" id="giang_vien_tree">
            <field name="name">gv.hv.tree</field>
            <field name="model">gv.hv</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Giảng viên">
                    <field name="name"/>
                    <field name="noi_ct"/>
            		<field name="dthoai"/>
            		<field name="email"/>
