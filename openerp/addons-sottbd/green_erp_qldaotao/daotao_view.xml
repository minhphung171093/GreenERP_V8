            <field name="view_id" ref="hoc_vien_form"/>
            <field name="act_window_id" ref="action_hoc_vien"/>
        </record>
        
    <!--Lớp-->
    
        <record model="ir.ui.view" id="lop_hoc_tree">
            <field name="name">lop.hoc.tree</field>
            <field name="model">lop.hoc</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Lớp">
                    <field name="name" />
                </tree>
            </field>
        </record>  
        
        <record model="ir.ui.view" id="lop_hoc_form">
            <field name="name">lop.hoc.form</field>
            <field name="model">lop.hoc</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Lớp" version="7.0">
	                <sheet>
                		<group col="4" colspan="2">
		            		<field name="name"/>
		            		<field name="tt_phoc"/>
		            		<field name="tg_hoc"/>
		            		<field name="tt_tbcs"/>
		            		<field name="tl_mon"/>
		            	</group>
		            	<notebook>
		            		<page string="Danh sách theo ngày">
			            		<field name="lop_line" context="{'default_ten_lop':name}" options="{'no_create': true}">
			            			<tree>
			            				<field name="name"/>
			            			</tree>
			            			<form>
				            			<sheet>
					            			<group col="4" colspan="2">
							            		<field name="ten_lop"/>
							            		<field name="name" required="1"/>
							            		<field name="giang_vien_id" options="{'no_create': true}" domain="[('giang_vien','=',True)]"/>
							            	</group>
							            	<notebook>
							            		<page string="Danh sách học viên">
							            			<field name="hocvien_ids" nolable="1" options="{'no_create': true}" domain="[('hoc_vien','=',True)]"/>
							            		</page>
						            		</notebook>
					            		</sheet>
				            		</form>
			            		</field>
		            		</page>
                		</notebook>
	                </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_lop_hoc">
            <field name="name">Lớp</field>
            <field name="res_model">lop.hoc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>  
        
<!--Đơn vị đào tạo-->
        <record model="ir.ui.view" id="doi_tac_dvdt_tree">
            <field name="name">doi.tac.dvdt.tree</field>
            <field name="model">doi.tac</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Đơn vị đào tạo">
                    <field name="name"/>
                    <field name="dia_chi"/>
                    <!--<field name="so_nha" />
                    <field name="tinh_tp_id" />
                    <field name="quan_huyen_id" />
                    <field name="phuong_xa_id" />
                    <field name="khu_pho_id" />-->
                    <field name="dien_thoai" />
                    <field name="fax" />
                    <field name="hoso_id" />
                    <field name="dv_dtao" invisible="1"/>
                </tree>
            </field>
        </record>  
        
        <record model="ir.ui.view" id="doi_tac_dvdt_form">
            <field name="name">doi.tac.dvdt.form</field>
            <field name="model">doi.tac</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Đơn vị đào tạo" version="7.0">
	                <sheet>
                		<group col="4"  string="Thông tin chung">
		            		<field name="name" />
		            		<field name="dia_chi"/>
		                    <field name="dien_thoai"/>
		                    <field name="fax" />
		                    <field name="hoso_id" options="{'no_create': true}"/>
		                    <field name="giang_vien_ids" widget="many2many_tags" domain="[('giang_vien','=',True)]" options="{'no_create': true}"/>
		                    <field name="dv_dtao" invisible="1"/>
                		</group>
                		<!--<group col="4"  string="Địa chỉ">
                			<field name="so_nha" />
							<field name="tinh_tp_id" options="{'no_create': true}"/>                   
							<field name="quan_huyen_id" options="{'no_create': true}"/>
							<field name="phuong_xa_id" options="{'no_create': true}" domain="[('quan_huyen_id','=',quan_huyen_id)]" />
							<field name="khu_pho_id" options="{'no_create': true}" domain="[('phuong_xa_id','=',phuong_xa_id)]" />
                		</group>-->
	                </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_doi_tac_dvdt">
            <field name="name">Đơn vị đào tạo</field>
            <field name="res_model">doi.tac</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_dv_dtao': 1}</field>
            <field name="domain">[('dv_dtao','=',True)]</field>
        </record>
        
        <record id="action_doi_tac_dvdt1" model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="doi_tac_dvdt_tree"/>
            <field name="act_window_id" ref="action_doi_tac_dvdt"/>
        </record>
        
        <record id="action_doi_tac_dvdt2" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="doi_tac_dvdt_form"/>
            <field name="act_window_id" ref="action_doi_tac_dvdt"/>
        </record>
        
<!--Hồ sơ năng lực-->
        <record model="ir.ui.view" id="hoso_nangluc_tree">
            <field name="name">hoso.nangluc.tree</field>
            <field name="model">hoso.nangluc</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Hồ sơ năng lực">
                    <field name="name" />
                </tree>
            </field>
        </record>  
        
        <record model="ir.ui.view" id="hoso_nangluc_form">
            <field name="name">hoso.nangluc.form</field>
            <field name="model">hoso.nangluc</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Hồ sơ năng lực" version="7.0">
	                <sheet>
                		<group>
		            		<field name="name" />
                		</group>
	                </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_hoso_nangluc">
            <field name="name">Hồ sơ năng lực</field>
            <field name="res_model">hoso.nangluc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record> 
        
<!-- Quản lí lớp học -->
        <record model="ir.ui.view" id="lop_hoc_line_form">
            <field name="name">lop.hoc.line.form</field>
            <field name="model">lop.hoc.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Quản lý lớp học" version="7.0">
	                <sheet>
            			<group col="4" colspan="2">
		            		<field name="lop_id" options="{'no_create': true}" required="1"/>
		            		<field name="name" required="1"/>
		            		<field name="giang_vien_id" options="{'no_create': true}" domain="[('giang_vien','=',True)]" required="1"/>
		            	</group>
		            	<notebook>
		            		<page string="Danh sách học viên">
		            			<field name="hocvien_ids" nolable="1" options="{'no_create': true}" domain="[('hoc_vien','=',True)]"/>
		            		</page>
	            		</notebook>
            		</sheet>
            		<footer>
                        <button name="btn_save" string="Lưu" type="object" class="oe_highlight"/>
                        or
                        <button string="Hủy" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_lop_hoc_line_form">
            <field name="name">Quản lý lớp học</field>
            <field name="res_model">lop.hoc.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="lop_hoc_line_form"/>
            <field name="target">new</field>
        </record>
		
<!-- Thời khóa biểu -->

		<record id="tkb_calendar" model="ir.ui.view">
            <field name="name">tkb.calendar</field>
            <field name="model">lop.hoc.line</field>
            <field name="arch" type="xml">
                <calendar string="Thời Khóa Biểu" color="lop_id" mode="month" date_start="name" readonly="True" create="false" edit="false" delete="false">
                    <field name="lop_id"/>
                    <field name="giang_vien_id"/>
                </calendar>
            </field>
        </record>
        
        <record id="action_tkb_calendar" model="ir.actions.act_window">
            <field name="name">Thời Khóa Biểu</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lop.hoc.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="tkb_calendar"/>
        </record>
        
<!-- Lịch Giảng viên -->

		<record id="lich_gv_calendar" model="ir.ui.view">
            <field name="name">lich.gv.calendar</field>
            <field name="model">lop.hoc.line</field>
            <field name="arch" type="xml">
                <calendar string="Lịch Giảng Viên" color="giang_vien_id" mode="month" date_start="name" readonly="True" create="false" edit="false" delete="false">
                    <field name="giang_vien_id"/>
                    <field name="lop_id"/>
                </calendar>
            </field>
        </record>
        
        <record id="action_lich_gv_calendar" model="ir.actions.act_window">
            <field name="name">Lịch Giảng Viên</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lop.hoc.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="lich_gv_calendar"/>
        </record>
    </data>	
</openerp>