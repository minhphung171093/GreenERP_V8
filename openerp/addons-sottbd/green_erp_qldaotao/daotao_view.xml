                </tree>
            </field>
        </record> 
        
        <record model="ir.ui.view" id="gv_lop_form">
            <field name="name">gv.lop.form</field>
            <field name="model">gv.hv</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Giảng viên" version="7.0" options="{'no_create': true}">
	                <sheet>
                		<group col="4" colspan="2">
		            		<field name="name"/>
		            		<field name="noi_ct"/>
		            		<field name="dthoai"/>
		            		<field name="email"/>
		            		<field name="giang_vien" invisible="1"/>
                		</group>
	                </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_gv_lop_form">
            <field name="name">Giảng viên</field>
            <field name="res_model">gv.hv</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_giang_vien': 1}</field>
            <field name="domain">[('giang_vien','=',True)]</field>
        </record>  
        
        <record id="action_gv_lop_form1" model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="gv_lop_tree"/>
            <field name="act_window_id" ref="action_gv_lop_form"/>
        </record>
        
        <record id="action_gv_lop_form2" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="gv_lop_form"/>
            <field name="act_window_id" ref="action_gv_lop_form"/>
        </record>
    
<!--Học viên-->
        <record model="ir.ui.view" id="hoc_vien_tree">
            <field name="name">hoc.vien.tree</field>
            <field name="model">gv.hv</field>
            <field name="type">tree</field>
