            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_giang_vien': 1}</field>
            <field name="domain">[('giang_vien','=',True)]</field>
        </record>  
        
        <record id="action_giang_vien1" model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="giang_vien_tree"/>
            <field name="act_window_id" ref="action_giang_vien"/>
        </record>
        
        <record id="action_giang_vien2" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="giang_vien_form"/>
            <field name="act_window_id" ref="action_giang_vien"/>
        </record>
        
        <record model="ir.ui.view" id="gv_lop_tree">
            <field name="name">gv.lop.tree</field>
            <field name="model">gv.hv</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Giảng viên" options="{'no_create': true}">
                    <field name="name"/>
                    <field name="noi_ct"/>
            		<field name="dthoai"/>
            		<field name="email"/>
