            <field name="domain">[('hoc_vien','=',True)]</field>
        </record>  
        
        <record id="action_hoc_vien1" model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hoc_vien_tree"/>
            <field name="act_window_id" ref="action_hoc_vien"/>
