<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
<!--tỉnh-->
        <record model="ir.ui.view" id="tinh_tp_tree">
            <field name="name">tinh.tp.tree</field>
            <field name="model">tinh.tp</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Tỉnh/Thành phố" editable='top'>
                    <field name="name" />
                    <field name="ten" />
                </tree>
            </field>
        </record>  
        <record model="ir.actions.act_window" id="action_tinh_tp">
            <field name="name">Tỉnh/Thành phố</field>
            <field name="res_model">tinh.tp</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>  

        					<!--quận-->   
        					
        					
        					
        <record model="ir.ui.view" id="quan_huyen_tree">
            <field name="name">quan.huyen.tree</field>
            <field name="model">quan.huyen</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Quận (Huyện)" editable='top'>
                    <field name="name" />
                    <field name="tinh_thanh_id" />
                </tree>
            </field>
        </record>  
        <record model="ir.actions.act_window" id="action_quan_huyen">
            <field name="name">Quận (Huyện)</field>
            <field name="res_model">quan.huyen</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>  
        
        		<!--Phường xã-->   
        					
        					
        					
        <record model="ir.ui.view" id="phuong_xa_tree">
            <field name="name">phuong.xa.tree</field>
            <field name="model">phuong.xa</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Phường (Xã)" editable='top'>
                    <field name="name" />
                    <field name="quan_huyen_id" options="{'create': false, 'create_edit': false}"/>
                </tree>
            </field>
        </record>  
        <record model="ir.actions.act_window" id="action_phuong_xa">
            <field name="name">Phường (Xã)</field>
            <field name="res_model">phuong.xa</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>      					
        	
        					
        					<!--khu phố-->   
        					
        <record id="khu_pho_search" model="ir.ui.view">
	        <field name="name">khu.pho.search</field>
	        <field name="model">khu.pho</field>
	        <field name="type">search</field>
	        <field name="arch" type="xml">
	            <search string="Khu phố (Ấp)">
                    <field name="name" />
                    <field name="quan_huyen_id" />
                    <field name="phuong_xa_id" />      
                    <group expand="1" string="Group By...">
	                    <filter string="Quận (huyện)" icon="terp-partner" context="{'group_by':'quan_huyen_id'}"/>
	                    <filter string="Phường (Xã)" context="{'group_by':'phuong_xa_id'}" />
               	 	</group>              
	            </search>	
	        </field>
	    </record>					
        					
        <record model="ir.ui.view" id="khu_pho_tree">
            <field name="name">khu.pho.tree</field>
            <field name="model">khu.pho</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Khu phố (Ấp)" editable='top'>
                    <field name="name" />
                    <field name="quan_huyen_id" options="{'create': false, 'create_edit': false}"/>
                    <field name="phuong_xa_id" domain="[('quan_huyen_id','=',quan_huyen_id)]" options="{'create': false, 'create_edit': false}"/>
                </tree>
            </field>
        </record>  
        <record model="ir.actions.act_window" id="action_khu_pho">
            <field name="name">Khu phố (Ấp)</field>
            <field name="res_model">khu.pho</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="khu_pho_search"/>
        </record>     

        					<!--Chủ đầu tư-->   
        					
	    <record id="chu_dau_tu_search" model="ir.ui.view">
            <field name="name">chu.dau.tu.search</field>
            <field name="model">chu.dau.tu</field>
            <field name="arch" type="xml">
                <search string="Chủ đầu tư">
                	<field name="name" />
                    <field name="tinh_tp_id" />
                    <field name="quan_huyen_id" />
                    <field name="phuong_xa_id" />
                    <field name="khu_pho_id" />
                    <separator/>
                    <group expand="0" string="Group By...">
                    	<filter string="Tỉnh (thành phố)" domain="[]" context="{'group_by':'tinh_tp_id'}"/>
                        <filter string="Quận (huyện)" domain="[]" context="{'group_by':'quan_huyen_id'}"/>
                        <filter string="Phường (xã)" domain="[]"  context="{'group_by':'phuong_xa_id'}"/>
                        <filter string="Khu phố (ấp)" domain="[]" context="{'group_by':'khu_pho_id'}"/>
                    </group>
               </search>
            </field>
        </record>					
        					
        <record model="ir.ui.view" id="chu_dau_tu_tree">
            <field name="name">chu.dau.tu.tree</field>
            <field name="model">chu.dau.tu</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Chủ đầu tư" >
                    <field name="name" />
                    <field name="quan_huyen_id" options="{'create': false, 'create_edit': false}"/>
                    <field name="phuong_xa_id" domain="[('quan_huyen_id','=',quan_huyen_id)]" options="{'create': false, 'create_edit': false}"/>
                </tree>
            </field>
        </record>  
