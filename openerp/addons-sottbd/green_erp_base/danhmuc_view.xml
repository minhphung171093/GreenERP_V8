<!--Đơn vị đào tạo-->
        <record model="ir.ui.view" id="donvi_daotao_tree">
            <field name="name">donvi.daotao.tree</field>
            <field name="model">donvi.daotao</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Đơn vị đào tạo">
                    <field name="name" />
                    <field name="so_nha" />
                    <field name="tinh_tp_id" />
                    <field name="quan_huyen_id" />
                    <field name="phuong_xa_id" />
                    <field name="khu_pho_id" />
                    <field name="dien_thoai" />
                    <field name="fax" />
                    <field name="hoso_id" />
                    <field name="giang_vien_ids" />
                </tree>
            </field>
        </record>  
        
        <record model="ir.ui.view" id="donvi_daotao_form">
            <field name="name">donvi.daotao.form</field>
            <field name="model">donvi.daotao</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Đơn vị đào tạo" version="7.0">
	                <sheet>
                		<group col="4"  string="Thông tin chung">
		            		<field name="name" />
		                    <field name="dien_thoai"/>
		                    <field name="fax" />
		                    <field name="hoso_id" />
		                    <field name="giang_vien_ids" widget="many2many_tags"/>
                		</group>
                		<group col="4"  string="Địa chỉ">
                			<field name="so_nha" />
							<field name="tinh_tp_id" options="{'create': false, 'create_edit': false}" />                   
							<field name="quan_huyen_id" options="{'create': false, 'create_edit': false}" />
							<field name="phuong_xa_id" options="{'create': false, 'create_edit': false}" domain="[('quan_huyen_id','=',quan_huyen_id)]" />
							<field name="khu_pho_id" options="{'create': false, 'create_edit': false}" domain="[('phuong_xa_id','=',phuong_xa_id)]" />
                		</group>
	                </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_donvi_daotao">
            <field name="name">Đơn vị đào tạo</field>
            <field name="res_model">donvi.daotao</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record> 
