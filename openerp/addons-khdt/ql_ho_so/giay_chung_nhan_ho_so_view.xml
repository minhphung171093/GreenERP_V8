	                    		<field name="name"/>
			                    <field name="so"/>
			                    <field name="ngay_cap"/>
		                    </tree>
                    	</field>
	                    <group attrs="{'invisible': [('is_company','=',False)]}">
		                    <field name="noi_cap_phep_thanh_lap"/>
		                    <field name="phan_he" invisible='1'/>
	                    </group>
	                    <group>
	                    	<field name="ten_viet_tat"/>
		                    <label for="street" string="Địa chỉ hiện tại"/>
	                        <div>
	                            <field name="street" placeholder="Đường/Khu Phố..."/>
	                            <div class="address_format">
	                            	<field name="country_id" placeholder="Quốc gia" class="oe_no_button" options='{"no_open": True}'/>
	                                <field name="state_id" class="oe_no_button" placeholder="Tỉnh thành" style="width: 37%%" options='{"no_open": True}' domain="[('country_id','=',country_id)]"/>
	                            </div>
	                        </div>
                        </group>
	                    <group string='Đại Diện Bởi' attrs="{'invisible': [('is_company','=',False)]}">
	                    	<field name="child_ids" nolabel='1' context="{'default_is_company':False,'default_parent_id': active_id, 'default_street': street, 'default_state_id': state_id, 'default_country_id': country_id}">
                                <tree string="Người Đại Diện">
				                    <field name="name"/>
				                    <field name="ngay_sinh"/>
				                    <field name="quoc_tich"/>
				                    <field name="cmnd_ho_chieu"/>
				                    <field name="so_cmnd_hochieu"/>
				                    <field name="ngay_cap_cmnd_hc"/>
				                    <field name="noi_cap_cmnd_hc"/>
				                    
				                    <field name="street" string='Địa chỉ hiện tại'/>
				                    <field name="state_id"/>
				                    <field name="country_id"/>
				                </tree>
                                <form string="Người Đại Diện" version="7.0">
                                    <sheet>
					                    <field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
