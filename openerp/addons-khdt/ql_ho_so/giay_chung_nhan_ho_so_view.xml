                <form string="Nhà đầu tư" version="7.0">
                	<sheet>
	                    <field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
	                    <div class="oe_title">
	                        <div class="oe_edit_only">
	                            <label for="name"/> (
	                            <field name="is_company" on_change="onchange_type(is_company)" class="oe_inline"/> <label for="is_company" string="Là Tổ Chức?"/>)
	                        </div>
	                        <h1>
	                            <field name="name" default_focus="1" placeholder="Name" />
	                        </h1>
	                    </div>
	                    <group attrs="{'invisible': [('is_company','=',True)]}">
	                    	<field name="title" string="Xưng hô" options='{"no_create":True}'/>
	                    	<field name="function" string="Chức vụ"/>
	                    	<field name="ngay_sinh"/>
	                    	<field name="gioitinh"/>
		                    <field name="quoc_tich"/>
		                    <field name="cmnd_ho_chieu"/>
		                    <field name="so_cmnd_hochieu"/>
		                    <field name="ngay_cap_cmnd_hc"/>
		                    <field name="noi_cap_cmnd_hc"/>
		                    <field name="dia_chi_thuong_tru"/>
