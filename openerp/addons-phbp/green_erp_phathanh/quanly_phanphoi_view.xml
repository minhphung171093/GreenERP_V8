       	<record model="ir.ui.view" id="kh_in_ve_tt_form">
	        <field name="name">kh.in.ve.tt.form</field>
	        <field name="model">kh.in.ve.tt</field>
	        <field name="arch" type="xml">
	            <form string="Kế hoạch in vé số truyền thống" version="7.0">
