		                    <field name="loai_ve_id" options="{'no_create':True}" />
		                    <field name="sl_in_moi_dot" />
		                    
		                    <field name="kich_co" />
			            </group>
			            <notebook>
							<page string = "Chi tiết Kế hoạch in">
